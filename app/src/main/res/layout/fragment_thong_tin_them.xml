<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ThongTinThemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="THÔNG TIN KHI CẦN "
            android:textColor="@color/textHeader"
            android:textSize="28dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="Dưới đây là một số thông tin của người phụ trách hệ thống. Nếu bạn gặp bất kì khó khăn gì thì đừng ngần ngại liên hệ với chúng tôi."

            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="Số điện thoại liên hệ : 0964048725"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/nhantin"
                android:text="Gọi ngay"

                android:textColor="@color/white"

                app:icon="@drawable/ic_baseline_call_24" />

            <Button

                android:id="@+id/btnNhanTin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/nhantin"
                android:text="Nhắn tin"
                app:icon="@drawable/ic_baseline_message_24">


            </Button>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="Ngoài ra, bạn cũng có thể để đọc thêm thông tin chi tiết bằng cách click vào nút dưới đây."
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button

            android:id="@+id/btnLink"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableRight="@drawable/ic_explore"
            android:text="Xem thêm thông tin." />
    </LinearLayout>
</LinearLayout>